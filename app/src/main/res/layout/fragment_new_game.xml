<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".controller.ui.newGame.NewGameFragment">

<!--  <ImageView
    android:id="@+id/new_game_logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <TextView
    android:id="@+id/new_game_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/> -->

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/account_name_field"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:hintEnabled="true"
    app:hintAnimationEnabled="true">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/account_name_input"
      android:layout_width="150dp"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:hint="Username"
      android:focusable="true"/>

  </com.google.android.material.textfield.TextInputLayout>

  <Button
    android:id="@+id/new_game_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/account_name_field"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Create Account"/>

</androidx.constraintlayout.widget.ConstraintLayout>